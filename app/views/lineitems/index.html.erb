<h1>Lineitems</h1>

<table>
  <thead>
    <tr>
      <th>Service name</th>
      <th>Service features</th>
      <th>Description</th>
      <th>Product price</th>
      <th>Quantity</th>
      <th>Payment method</th>
      <th>Delivery date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lineitems.each do |lineitem| %>
      <tr>
        <td><%= lineitem.service_name %></td>
        <td><%= lineitem.service_features %></td>
        <td><%= lineitem.description %></td>
        <td><%= lineitem.product_price %></td>
        <td><%= lineitem.quantity %></td>
        <td><%= lineitem.payment_method %></td>
        <td><%= lineitem.delivery_date %></td>
        <td><%= link_to 'Show', lineitem %></td>
        <td><%= link_to 'Edit', edit_lineitem_path(lineitem) %></td>
        <td><%= link_to 'Destroy', lineitem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

