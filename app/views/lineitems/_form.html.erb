 <%= form_with(model: lineitem, local: true) do |form|%> 
  <% if lineitem.errors.any?%> 
    <div id="error_explanation">
      <h2>  <%= pluralize(lineitem.errors.count, "error")%> prohibited this lineitem from being saved:</h2>
      <ul>
      <% lineitem.errors.full_messages.each do |message|%> 
        <li>  <%= message%> </li>
      <% end%>
      </ul>
   </div>
  <% end%>

<table>

  <thead>

  </thead>
  <tbody>
   
 <tr>
    <td>  <%= form.label :service_name%> </td>
    <td>    <%= form.select(:service_name, %w{ ecommerce_website_development android_application_development iOS_application_development }) %>
</td>
  </tr>
 <tr>
    <td>  <%= form.label :service_features%> </td>
    <td>    <%= form.text_field :service_features%></td>
  </tr>
 <tr>
  
    <td>  <%= form.hidden_field :serviceid %> </td>
  </tr>
 <tr>
    <td>  <%= form.label :description%> </td>
    <td>  <%= form.text_area :description, :cols=> "16" , :rows=> "3" ,id: :lineitem_description%> </td>
  </tr>

<tr>
    <td>  <%= form.label :quantity%> </td>
    <td>  <%= form.number_field :quantity%> </td>
  </tr>
 <tr>
    <td>  <%= form.label "Cash on delivery" %> </td>
    <td>  <%= form.check_box  :cod, {:class => "myclass", :style => "mystyle"}, "checked-value", "unchecked-value" %> </td>
  </tr> 

 <tr>

<td>Payment method</td>
     <td>   <%= form.label :payment_method, "Internet Banking", :value => "true"  %>
    <%= form.radio_button :payment_method, true %>
      <%= form.label :payment_method, "Card", :value => "false" %>
    <%= form.radio_button :payment_method, false, :checked => true %>
    </td>
   

  </tr>

 <tr>
    <td>  <%= form.label :delivery_date%> </td>
    <td>  <%= form.date_select  :delivery_date %>
     </td>
  </tr>

   <tr>
    <td>  <%= form.submit%> </td>
  </tr>
  </tbody>
</table>


<% end%>
